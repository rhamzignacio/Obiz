
@{
    ViewBag.Title = "PercentageTypeOfActivity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" ng-controller="salesReportController as SR" ng-init="initTypeOfActivity()">
    <div class="">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"><i class="icon-calendar"></i></span>
                <h5>Date Range</h5>
            </div>

            <div class="widget-content">
                <div class="form-group">
                    <input type="date" ng-model="SR.Search.StartDate" id="filterStartDate" />
                    <input type="date" ng-model="SR.Search.EndDate" id="filterEndDate" />
                    <button class="btn btn-primary btn-xs" ng-click="SearchTypeOfActivity(SR.Search)">Search</button>
                </div>
            </div>
        </div>
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"><i class="icon-signal"></i></span>
                <h5>Total Type of Activity</h5>
            </div>

            <div class="widget-content">
                <canvas id="typeOfActivityChart" style="width:900px; height:500px;"></canvas>
            </div>
        </div>
    </div>
</div>